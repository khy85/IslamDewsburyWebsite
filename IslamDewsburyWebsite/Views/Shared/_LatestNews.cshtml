@model  List<IslamDewsburyWebsite.Models.LatestNewsEventsViewModel>
<link href="~/Content/LatestNewsEvents.css" rel="stylesheet" />

@foreach (var newsEvent in Model)
{
    <div style="width:100%;">
        <div style="display:inline-block;">
            <div style="font-size:55px; text-align:center; font-weight:bold; height:60px; margin-top:-15px;">@newsEvent.DisplayDateDay</div>
            <div style="font-size:25px; text-align:center">@newsEvent.DisplayDateMonth</div>
            <div style="font-size:15px; text-align:center">@newsEvent.DisplayDateYear</div>
        </div>
        <div style="display:inline-block; margin-left:5px; vertical-align:top; margin-bottom:15px;">
            <a href="@newsEvent.LargeImgLocation" download="@newsEvent.LargeImgLocation">
                <img src="@newsEvent.SmallImgLocation" title="@newsEvent.Tooltip" style="border: 1px solid black;" />
            </a>
        </div>
        <div style="display:inline-block; width:75%; margin-left:25px; vertical-align:top;">
            <div style="font-size:18px;"><strong>@newsEvent.Heading</strong></div>
            <div>
                <p style="word-wrap:break-word; margin-top:5px;">
                    @Html.Raw(@newsEvent.DisplayContent)
                    
                    @if (newsEvent.ContentReadMore)
                    {
                        <text>....</text>
                    }
                    <div style="display:block; text-align:right;">
                        @Html.ActionLink("Read More", "NewsAndEvent", "Home", new { Id = newsEvent.Id }, new { @class = "btn btn-default" })
                    </div>
                </p>
            </div>
        </div>
    </div>
    <hr />
    <br />
}